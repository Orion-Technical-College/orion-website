    ViewBag.Title = "EditMailTemplate";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayout.cshtml";
    ViewBag.Pageheading = "Edit MailTemplate";
    CMS.Entities.MailTemplates objTemplates = ViewBag.objTemplates;
}


            $("<input>")
                .attr({
                    type: "hidden",
                    name: "ClientValidationStatus",
                    value: "true"
                })
                .appendTo(form);

            form.submit(); // Submit the form
        } else {
            console.log("Please complete the form correctly.");
        }
    });
</script>